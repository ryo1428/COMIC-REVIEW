<div class="card-list-container py-5">
  <% comics.each do |comic| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to comic_path(comic.id) do %>
      <%= image_tag comic.get_image, class: "card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag comic.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(comic_path(comic.id), class: "text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= comic.shop_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= comic.caption %></p>
          <span><i class="fas fa-user"></i> By <%= comic.user.name %> ｜ </span>
          <span><%= link_to "#{comic.comic_reviews.count} コメント", comic_path(comic.id), class: "text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate comics %>
</div>